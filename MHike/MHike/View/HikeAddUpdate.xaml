<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MHike.View.HikeAddUpdate"
             Title="Hike Form">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Name"
               x:Name="nameEntry"/>
            <Entry Placeholder="Location"
               x:Name="locationEntry"/>
            <DatePicker x:Name="datePicker"
                        Date="{Binding Date}"
                        Format="D" />
            <Entry Placeholder="Length"
                x:Name="lengthEntry"/>
            <Entry Placeholder="Level"
                x:Name="levelEntry"/>
            <Entry Placeholder="Description"
                x:Name="descriptionEntry"/>
            <Entry Placeholder="Parking Available"
                x:Name="parkingEntry"/>
            <Button Text="Save"
                Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>